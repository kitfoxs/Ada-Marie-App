{
  "mcpServers": {
    "claude-mem": {
      "command": "uvx",
      "args": [
        "chroma-mcp",
        "--client-type",
        "persistent",
        "--data-dir",
        "~/.ada-marie/chroma"
      ],
      "tools": ["*"],
      "_description": "CRITICAL: Persistent memory using ChromaDB vector database."
    },
    "time": {
      "command": "uvx",
      "args": [
        "mcp-server-time",
        "--local-timezone",
        "America/Chicago"
      ],
      "tools": ["*"],
      "_description": "Time awareness and timezone conversions."
    },
    "apple-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "apple-mcp@latest"
      ],
      "tools": ["*"],
      "_description": "macOS: Calendar, Reminders, Notes, Mail, Contacts, Maps."
    },
    "fetch": {
      "command": "npx",
      "args": [
        "-y",
        "fetch-mcp"
      ],
      "tools": ["*"],
      "_description": "Web page fetching for research."
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "tools": ["*"],
      "_description": "Backup knowledge graph memory."
    },
    "browser-use": {
      "command": "uvx",
      "args": [
        "mcp-server-browser-use"
      ],
      "env": {
        "MCP_USE_VISION": "true"
      },
      "tools": ["*"],
      "_description": "Full browser automation with vision capabilities."
    },
    "mac-messages": {
      "command": "uvx",
      "args": [
        "mac-messages-mcp"
      ],
      "tools": ["*"],
      "_description": "macOS: iMessage integration for communication support."
    },
    "obsidian": {
      "command": "npx",
      "args": [
        "-y",
        "obsidian-mcp-server"
      ],
      "env": {
        "OBSIDIAN_API_KEY": "YOUR_API_KEY_HERE",
        "OBSIDIAN_BASE_URL": "http://127.0.0.1:27123"
      },
      "tools": ["*"],
      "_description": "Obsidian vault integration for note-taking workflows."
    },
    "siri-shortcuts": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-server-siri-shortcuts@latest"
      ],
      "tools": ["*"],
      "_description": "macOS/iOS: Run Siri Shortcuts for automation."
    }
  }
}
